\newenvironment{namedabstract}[1]{%
	\def\originalabstractname{\abstractname}%
	\renewcommand{\abstractname}{#1}%
	\begin{abstract}%
}{%
	\end{abstract}%
	\renewcommand{\abstractname}{\originalabstractname}%
}

